<div class="row">
	<div class="col-md-6">
		<%= form_for [s,cust], html: {class: 'form-horizontal'}, remote: true do |f| %>
			<div class="form-group">
				<%= f.label 'Groom\'s name', class: 'col-sm-3 control-label'%>
				<div class="col-sm-9">
					<%= f.text_field :gr_name, class: 'form-control' %>	
				</div>
			</div>
			<div class="form-group">
				<%= f.label 'Groom\'s father\'s name', class: 'col-sm-3 control-label' %>
				<div class="col-sm-9">
					<%= f.text_field :gr_father_name, class: 'form-control' %>
				</div>
			</div>

			<div class="form-group">
				<%= f.label 'Groom\'s mother\'s name', class: 'col-sm-3 control-label' %>
				<div class="col-sm-9">
					<%= f.text_field :gr_mother_name, class: 'form-control' %>	
				</div>
			</div>
			<div class="form-group">
				<%= f.label 'Bride\'s name', class: 'col-sm-3 control-label'%>
				<div class="col-sm-9">
					<%= f.text_field :br_name, class: 'form-control' %>	
				</div>
			</div>

			<div class="form-group">
				<%= f.label 'Bride\'s father\'s name', class: 'col-sm-3' %>
				<div class="col-sm-9">
					<%= f.text_field :br_father_name, class: 'form-control' %>		
				</div>
			</div>
			<div class="form-group">
				<%= f.label 'Bride\'s mother\'s name', class: 'col-sm-3' %>
				<div class="col-sm-9">
					<%= f.text_field :br_mother_name, class: 'form-control' %>	
				</div>
			</div>
			<div class="form-group">
				<div class="col-md-9 col-md-offset-3">
					<%= f.submit 'Submit', class: 'form-control btn btn-default' %>
					
				</div>
			</div>
			
		
		<% end %>		
	</div>
	<div class="col-md-6">
		For image of the sutie
	</div>
</div>
