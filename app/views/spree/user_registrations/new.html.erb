<% @body_id = 'signup' %>
<%= render :partial => 'spree/shared/error_messages', :locals => { :target => @user } %>
<div class="col-md-6 col-md-offset-3">
	<div class="panel panel-default">
		<div class="panel-heading  signup-heading-panel">
			<h3 class="panel-title">Signup</h3>
		</div>
		<div id="new-customer" class="panel-body" data-hook="login">
			<%= form_for resource, :as => :spree_user, :url => spree.registration_path(@user), html: {class: 'form-horizontal signup-form'} do |f| %>
			<div data-hook="signup_inside_form">
				<%= render :partial => 'spree/shared/user_form', :locals => { :f => f } %>
				<div class="signup-tc">*By signing up you agree to our T&C</div>
				<div class="form-group">
					<div class="col-md-6 col-md-offset-4">
						<%= f.submit "Signup with Prindora", :class => 'btn btn-lg btn-success btn-block' %>
					</div>
				</div>

			</div>
			<% end %>
			<div class="text-center">
				<%= Spree.t(:or) %>
				<%= link_to Spree.t(:login_as_existing), spree.login_path %>
			</div>
			<div data-hook="login_extras"></div>
		</div>
	</div>
</div>
