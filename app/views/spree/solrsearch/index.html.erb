<div class="row">
  <div class="col-md-3"style="height:1000px; width:200px; margin-right:46px;float:left;border:1px solid rgba(1,0,0,0.3);">

  <div style="padding:10px;" class="filterboxtxt">
   <div class="rowfilterbox">
   <strong>
        <font style="padding-right:2em;">Narrow your Search</font> 
         <%= link_to "reset", "/search" ,style:"color:rgba(1,0,0,0.5);"%>
    </strong>
    </div>
    <div class="rowfilterbox">
      <strong>
        Designer
      </strong>
      <ul style="list-style-type:none;padding:0 !important;">
        <% for row in @search.facet(:designer_id).rows %>
          <li style="margin-left:0px !important;">
            <% if params[:designer].to_i == row.value %>
              <%= link_to designer: nil, color_id: params[:color_id], trim_id: params[:trim_id], dimension_id: params[:dimension_id],:class=>"checbox1"  do  %>
                <%= check_box_tag 'check','ch', true%>
                <%= row.instance.name %>
              <% end %>
            <% else %>
              <%= link_to designer: row.value, color_id: params[:color_id], trim_id: params[:trim_id], dimension_id: params[:dimension_id],:class=>"checbox1"  do  %>
                <%= check_box_tag 'check','ch' %>
                <%= row.instance.name %>
              <% end %>
            <% end %>
            (
            <%= row.count %>
            )
          </li>
        <% end %>
      </ul>
    </div>
    <div class="rowfilterbox">
      <strong>
        Color
      </strong>
      <ul style="list-style-type:none;padding:0 !important;">
        <% for row in @search.facet(:color_ids).rows %>
          <li >
            <% if params[:color_id].to_i == row.value %>
                <%= link_to color_id: nil, designer: params[:designer], trim_id: params[:trim_id], dimension_id: params[:dimension_id] do %>
                <div style="width:15px;height:15px;margin-left:3px;float:left;background:<%= row.instance.code %>">
                </div>
              <% end %>
            <% else %>
            
              <%= link_to color_id: row.value, designer: params[:designer], trim_id: params[:trim_id], dimension_id: params[:dimension_id] do %>
                
                <div style="width:15px;height:15px;margin-left:3px;float:left;background:<%= row.instance.code %>">
                </div>
                
              <% end %>
            <% end %>
            
          </li>
        <% end %>
      </ul>
    </div>
    <div class="rowfilterbox">
      <strong>
        Card Shape
      </strong>
      <ul style="list-style-type:none;padding:0 !important;">
        <% for row in @search.facet(:trim_ids).rows %>
          <li>
            <% if params[:trim_id].to_i == row.value %>
              <%= link_to trim_id: nil, designer: params[:designer], color_id: params[:color_id], dimension_id: params[:dimension_id] do %>
                <%= check_box_tag '', '', true %>
                <%= row.instance.name %>
              <% end %>
            <% else %>
              <%= link_to trim_id: row.value, designer: params[:designer], color_id: params[:color_id], dimension_id: params[:dimension_id] do %>
                <%= check_box_tag '' %>
                <%= row.instance.name %>
              <% end %>
            <% end %>
            (
            <%= row.count %>
            )	
          </li>
        <% end %>
      </ul>
    </div>
    <div class="rowfilterbox">
      <strong>
        Dimension
      </strong>
      <ul style="list-style-type:none;padding:0 !important;">
        <% for row in @search.facet(:dimension_ids).rows %>
          <li>
            <% if params[:dimension_id].to_i == row.value %>
              <%= link_to  dimension_id: nil, designer: params[:designer], color_id: params[:color_id], trim_id: params[:trim_id] do %>
                <%= check_box_tag '', '', true %>
                <%= row.instance.name %>
              <% end %>
            <% else %>
              <%= link_to  dimension_id: row.value, designer: params[:designer], color_id: params[:color_id], trim_id: params[:trim_id] do %>
                <%= check_box_tag '' %>
                <%= row.instance.name %>
              <% end %>
            <% end %>
            (
            <%= row.count %>
            )
          </li>
        <% end %>
      </ul>
    </div>
    </div>
  </div>
 


 <div class="col-md-9"style="height:auto; width:746px; margin-left:8px;float:right;">
          <%= render 'spree/suites/sort' %>
              <div class="col-md-12" style="height:auto; width:746px;">
              <div class="row">
                <% if @suites.present? %>
                  <% @suites.each do |p| %>
                   <%= render 'spree/suites/suite', p: p %>
                  <% end %> 
                
                <%else %>
                  <div>No Results found</div>
                  <%= form_tag '/search', :method => :get, class: "form-horizontal" do %>
                      <div class="form-group">
                        <%= label_tag 'Search',nil, class: 'col-md-2 control-label' %>
                        <div class="col-md-6">
                          <%= search_field_tag :search, params[:search], class: "form-control"%>
                        </div>  
                      </div>
                      
                      <div class="form-group">
                        <div class="col-md-4 col-md-offset-2">
                          <%= submit_tag 'Submit' %>
                        </div>
                      </div>    
                  <% end %>
                
                <% end %>                
              </div>
              </div>
      </div>
</div>
