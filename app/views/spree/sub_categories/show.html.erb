
<h1>This is a subcat->suites show page </h1>





<div class="row" style="height:auto; width:1000px;">
         
      <div class="col-md-3"style="height:100px; width:238px; background:rgba(1,0,0,0.2); margin-right:8px;float:left;">
      navigation
      </div>
      
      <div class="col-md-9"style="height:auto; width:746px; margin-left:8px;float:right;">
              <div class="col-md-12" style="height:140px; width:746px; background:rgba(1,0,0,0.2);margin-bottom:10px;">
              </div>


              <div class="col-md-12" style="height:auto; width:746px;">
              <div class="row">
	              <% if !@scsuite.nil? %>
	              <% @scsuite.each do |p| %>
	               <span>

                    <div class="col-md-4" style="height:350px; width:240px; margin-right:8px;margin-top:10px;border:1px solid rgba(1,0,0,0.2);" >
                        <div style="height:240px; width:238px;background:rgba(1,0,0,0.2);">
				                 <P> IMAGE	</P>
                        </div>            
                    
                        <div class="viewsuitediv">
                        <%= link_to p.name, p,:class => "viewsuitetxt" %><br>
                        <font class ="viewsuitetxt">Rs.xxx</font><br>
                        <div style="width:100px;height:17px; border:1px solid rgba(1,0,0,0.05);margin-left:50px;margin-right:50px;">
                         <% if p.colors.first %>
                          <% p.colors.each do |sc| %>
                        <div style="width:15px;height:15px; float:center;margin-left:5px;float:left; background:<%= sc.code %>">
                        </div>
                         <%end %>
                         <%end %>
                        </div>
                        <%= link_to p.avg_rating,:class => "viewsuitetxt" %>(<%= link_to p.reviews_count,:class => "viewsuitetxt" %>)<br>
                        <button type="button" class ="viewsuitebtn">
                        <%= link_to "View Suite", p,:class => "viewsuitetxt1" %>

                        </button> 

                        </div>
                    </div>

                 </span>
			          <% end %> 
			          <% end %>                
              </div>
              </div>
      </div>

</div>




