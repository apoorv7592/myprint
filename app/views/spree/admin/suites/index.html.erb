<div id="suites_noti"></div>
<div class="row">
	<div class="col-md-6">
		<h4>All Suites</h4>
	</div>
	<div class="col-md-6">
		<div class="pull-right">
			<%= button_to 'New Suite', new_admin_suite_path, method: 'get' 	%>
		</div>
	</div>
</div>

<table class=" table table-striped">
	<thead>
		<tr>
			<th>Name</th>
			<th>SKU Id</th>
			<th>Description</th>
			<th>Designer Name</th>
			<th>Designer Id</th>
			<th>Sub Category</th>
		</tr>
	</thead>
	<tbody>
		<% @suites.each do |s| %>
			<tr>
				<td><%= s.name %></td>
				<td><%= s.sku_id %></td>
				<td><%= s.sku_id %></td>
				<td><%= s.designer.name %></td>
				<td><%= s.designer_id %></td>
				<td><%= s.sub_category.name %></td>
			</tr>
		<%end%>
	</tbody>
</table>