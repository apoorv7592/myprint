
<div class="row">
	<div class="col-sm-offset-2">
	<h4> New Suite </h4>
	<p>Slug can only be updated while editing the suite</p>
		<%= form_for @suite, url: admin_suites_path, html: {class: 'form-horizontal'} do |f| %>
			<div class="row form-group">
				<%= f.label :sku_id, class: 'col-sm-2' %>
				<%= f.text_field :sku_id, class: 'col-sm-6'%>
			</div>
			<div class="row form-group">
				<%= f.label 'Relative importance', class: 'col-sm-2'%>
				<%= f.number_field :position, class: 'col-sm-6' %>
			</div>
			<div class="row form-group">
				<%= f.label :name, class: 'col-sm-2' %>
				<%= f.text_field :name, class: 'col-sm-6'%>
				
			</div>
			<div class="row form-group">
				<%= f.label :price, class: 'col-sm-2' %>
				<%= f.text_field :price, class: 'col-sm-6'%>
				
			</div>

			<div class="row form-group">
				<%= f.label :description, class: 'col-sm-2' %>
				<%= f.text_area :description, class: 'col-sm-6'%>
			</div>
			<div class="row form-group">
				<%= f.label 'Designer', class: 'col-sm-2' %>
				<%= f.select :designer_id,Designer.all.collect{|d| [d.name,d.id]}, class: 'col-sm-6'%>
			</div>

			
			
			<div class="row form-group">
				<%= f.label 'Available from', class: 'col-sm-2' %>
				<%= f.date_field :available_on %>
			</div>

			<div class="row form-group">
				<%= f.label 'Suite Photo', class: 'col-sm-2'%>
				<%= f.file_field :avatar, class: 'col-sm-6' %>
			</div>

			

			<div class="row form-group">
				<%=f.label 'Sub Categories', class: 'col-sm-2' %>
				<div class="col-sm-6">
					<% SubCategory.all.each do |s| %>
						<%= f.label s.name%>
						<%= check_box_tag 'sub_category_ids[]', s.id%>
						&nbsp
					<% end %>
				</div>
			</div>

			<div class="row form-group">
				<%=f.label 'Colors', class: 'col-sm-2' %>
				<div class="col-sm-6">
					<% Color.all.each do |s| %>
						<% if !@suite.colors.include?(s)%>
							<div style="height:30px; width:30px;background-color:<%= s.code%>">
								<%= check_box_tag 'colors[]', s.id%>
							</div>
							
						<%end%>
					<% end %>
				</div>
			</div>

			<div class="row form-group">
				<%= f.submit 'Submit', class: 'btn btn-primary col-sm-4 col-sm-offset-2' %>
			</div>
		<% end %>
	</div>
</div>
