
<div class="row">
	<div class="col-sm-offset-2">
	<h4>New product property</h4>

		<%= form_for @prodinfo, url: admin_prodinfos_path, html: {class: 'form-horizontal'} do |f| %>
			<div class="row form-group">
				<%= f.label :length, class: 'col-sm-2' %>
				<%= f.text_field :length, class: 'col-sm-6'%>
			</div>
			<div class="row form-group">
				<%= f.label :width, class: 'col-sm-2'%>
				<%= f.text_field :width, class: 'col-sm-6'%>
			</div>
			<div class="row form-group">
				<%= f.label :height, class: 'col-sm-2' %>
				<%= f.text_field :height, class: 'col-sm-6'%>
				
			</div>
			<div class="row form-group">
				<%= f.label :size, class: 'col-sm-2' %>
				<%= f.text_field :size, class: 'col-sm-6'%>
				
			</div>
			<div class="row form-group">
				<%= f.label :material, class: 'col-sm-2' %>
				<%= f.text_field :material, class: 'col-sm-6'%>
				
			</div>
			<div class="row form-group">
				<%= f.label :instructions, class: 'col-sm-2' %>
				<%= f.text_area :instructions, class: 'col-sm-6'%>
			</div>
			<div class="row form-group">
				<%= f.label 'Product', class: 'col-sm-2' %>
				<%= f.select :product_id,Spree::Product.all.collect{|d| [d.name,d.id]}, class: 'col-sm-6'%>
			</div>
			

			<div class="row form-group">
				<%= f.submit 'Submit', class: 'btn btn-primary col-sm-4 col-sm-offset-2' %>
			</div>
		<% end %>
	</div>
</div>
