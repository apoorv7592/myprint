<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<div class="row">
			<div class="col-md-6">
				<h4><b>Designers List</b></h4>
			</div>
			<div class="col-md-6">
				<span class="pull-right">
					<%= button_to 'New Designer', new_admin_designer_path, method: 'get', class: 'btn btn-primary'%>
				</span>
			</div>
		</div>
		<table class="table table-striped">
			<thead>
				<th>Id</th>
				<th>Name</th>
				<th>About</th>
				<th>City</th>
				<th>Active</th>
				<th>Edit</th>
			</thead>
			<tbody>
				<% @designers.each do |d| %>
					<tr>
						<td><%= d.id%> </td>
						<td><%= link_to d.name, admin_designer_path(d)%> </td>
						<td><%= d.about%> </td>
						<td><%= d.city%> </td>
						<td id="dsg_switch_<%= d.id %>">
							<% if d.active %>
								<%= render 'make_inactive' , d: d%>
							<% else %>
								<%= render 'make_active', d: d %>
							<%end %>
						</td>
						<td>
							<%= link_to 'Edit', edit_admin_designer_path(d) %>
						</td>
					</tr>
				<%end %>
			</tbody>
		</table>
	</div>
</div>