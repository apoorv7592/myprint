<div class="row">
	<div class="col-sm-offset-2">
	<h4> New Discover </h4>
	<p></p>
		<%= form_for @disc, url: admin_discovers_path, html: {class: 'form-horizontal'} do |f| %>
			<div class="row form-group">
				<%= f.label :name, class: 'col-sm-2' %>
				<%= f.text_field :name, class: 'col-sm-6'%>
			</div>
			<div class="row form-group">
				<%= f.label :Category, class: 'col-sm-2' %>
				<%= f.select :category_id, options_from_collection_for_select(Category.all, 'id', 'name')%>
			</div>
			<div class="row form-group">
				<%= f.label :Avatar, class: 'col-sm-2' %>
				<%= f.file_field :avatar%>
			</div>

			<div class="row form-group">
				<%= f.submit 'Submit', class: 'btn btn-primary col-sm-4 col-sm-offset-2' %>
			</div>
		<% end %>
	</div>
</div>