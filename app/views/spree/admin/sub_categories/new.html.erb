<div class="row">
	<div class="col-sm-offset-2">
	<h4> New SubCategory </h4>
	<p></p>
		<%= form_for @cat, url: admin_sub_categories_path, html: {class: 'form-horizontal'} do |f| %>
			<div class="row form-group">
				<%= f.label :name, class: 'col-sm-2' %>
				<%= f.text_field :name, class: 'col-sm-6'%>
			</div>
			<div class="row form-group">
				<%= f.label :category_id, class: 'col-sm-2' %>
				<%= f.select :category_id, options_from_collection_for_select(Category.all, 'id', 'name') %>
			</div>

			<div class="row form-group">
				<%= f.submit 'Submit', class: 'btn btn-primary col-sm-4 col-sm-offset-2' %>
			</div>
		<% end %>
	</div>
</div>