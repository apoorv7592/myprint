
<div class="row">
	<div class="col-sm-offset-2">
	<h4> New Suite Variant </h4>
		<%= form_for @characteristic, url: admin_suite_characteristics_path, class: 'form-horizontal' do |f| %>
			<div class="row form-group">
				<%= f.label :name, class: 'col-sm-2' %>
				<%= f.text_field :name, class: 'col-sm-6'%>
			</div>

			<div class="row form-group">
				<%= f.label 'Suite', class: 'col-sm-2' %>
				<%= f.select :suite_id,Suite.all.collect{|d| [d.name,d.id]}, class: 'col-sm-6'%>
			</div>

			<div class="row form-group">

				<%= f.label 'Suite Variant DP', class: 'col-sm-2' %>
				<%= f.file_field :avatar %>
			</div>
		
			<div class="row form-group">
				<%= f.submit 'Submit', class: 'btn btn-primary col-sm-4 col-sm-offset-2' %>
			</div>
		<% end %>
	</div>
</div>