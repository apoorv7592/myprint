<div class="row">
	<div class="col-sm-offset-2">
	<h4> New Color </h4>
	<p></p>
		<%= form_for @color, url: admin_colors_path, html: {class: 'form-horizontal'} do |f| %>
			<div class="row form-group">
				<%= f.label :name, class: 'col-sm-2' %>
				<%= f.text_field :name, class: 'col-sm-6'%>
			</div>
			<div class="row form-group">
				<%= f.label :code, class: 'col-sm-2' %>
				<%= f.text_field :code%>
			</div>

			<div class="row form-group">
				<%= f.submit 'Submit', class: 'btn btn-primary col-sm-4 col-sm-offset-2' %>
			</div>
		<% end %>
	</div>
</div>