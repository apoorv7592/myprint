<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<h4><%= link_to 'All Colors', admin_colors_path%>
		>>
		Colors Details</h4>
		<table class="table table-striped">


			<tr>
				<td><b>Name</b></td>
				<td><%= @color.name%></td>
			</tr>
			<tr>
				<td><b>Code</b></td>
				<td><%= @color.code%></td>
			</tr>
            <tr>
				<td><b>Color</b></td>
				<td><div style="width:50px; height:50px; background-color:<%=@color.code %>;"></div></td>
			</tr>
		</table>
			<div class="row">
				<div class="col-md-4">
					<%= button_to 'Update', edit_admin_color_path(@color), method: 'get' , class: 'btn btn-primary'%>
				</div>
				<div class="col-md-2">
					<%= link_to 'Delete', admin_color_path(@color), method: 'delete', data: {confirm: "Are you sure?"} %>
				</div>		
			</div>
			
	</div>
</div>
