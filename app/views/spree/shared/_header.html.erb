<div id="spree-header">
	<header id="header" data-hook>
		
		<div class="container">
			<div class="row">
				<div class="col-md-6">
					<figure id="logo" data-hook>
						<%= link_to image_tag('logo.png', height: 50), root_path %>
					</figure>
				</div>
				
				<div class="col-md-6">
					<%= render :partial => 'spree/shared/search' %>
				</div>
				
			</div>
		</div>
	</header>
	<div class="container">
		<%= render :partial => 'spree/shared/main_nav_bar' if store_menu? %>
	</div>
</div>
