<style type="">
	.inner-addon { 
    position: relative; 
}

/* style icon */
.inner-addon .fa {
  position: absolute;
  padding-top: 8px;
  padding-left: 8px;
  padding-right: 8px;
  pointer-events: none;
}

/* align icon */
.right-addon .fa { right: 0px;}

/* add padding  */
.right-addon input { padding-right: 30px; }
</style>

	<header id="header" data-hook>
		
		<div class="container" style="width:1000px;padding:0 !important; margin-bottom:10px;">
			<div class="row-fluid">
				<div class="col-md-6" style="float:left;">
					<figure id="logo" data-hook>
						<%= link_to image_tag('logo.png', height: 40), root_path %>
					</figure>
				</div>
				
				<div class="col-md-6" style="float:right;">
				<div class="inner-addon right-addon">
			    <i class="fa fa-search"></i>
			    <%= render :partial => 'spree/shared/search' %>
                </div>
				</div>
				
			</div>
		</div>
	</header>
