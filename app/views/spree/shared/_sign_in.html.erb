<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true"  data-backdrop="false">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">Login / Signup</h4>
      </div>
      <div class="modal-body">
      	<div class="row">
        
      		<div class="col-md-6">
      			<%= form_for(:spree_user, :url => new_spree_user_session_path,html: {class: 'form-horizontal'}) do |f| %>
				  <div class="form-group">
					  <%= f.label 'Email', class: 'col-sm-2 control-label login-form-label', style: 'margin-right:12px;'%>

					  <div class="col-sm-9">
					  	<%= f.text_field :email, class: 'form-control', placeholder: 'email' %>	
					  </div>
				  </div>
				  <div class="form-group">
				  	<%= f.label 'Password', class: 'col-sm-2 control-label login-form-label',style: 'margin-right:12px;' %>
					<div class="col-sm-9">
						<%= f.password_field :password,class: 'form-control', placeholder: 'password'  %>
					</div>  
				  </div>
				  <div class="form-group">
					  <div class="col-sm-offset-2 col-sm-10">
				  		<%= f.check_box :remember_me,style: 'margin-right:12px;'%>
				  		<label class="login-form-label">Remember me</label>
					  </div>
				  </div>
				  <div class="form-group">
				  	<%= f.submit 'Login', class: 'col-sm-offset-2 btn btn-success' %>
				  </div>
				  <div class="form-group">
				  	<%= link_to "Forgot your password?", new_spree_user_password_path, class: 'col-sm-offset-2', style: 'font-size:12px;'%>	
				  </div>
				<% end %>		
      		</div><!--End of the form -->
      		<div class="col-md-6">
      			<div class="row">
      				<div class="col-md-12" style="text-align:center">
      					<h4 id="login-comm-head">Advantages of signing up </h4>
      					
      					<div class="login-sub-comm">
      						<%= fa_icon "barcode", class: 'login-comm-icon'%>
      						Track your order and customizations
      					</div>
      					<div class="login-sub-comm">
      						<%= fa_icon "share-square", class: 'login-comm-icon'%>
      						You can follow your favourite designer
      					</div>
      					<div class="login-sub-comm">
      						<%= fa_icon "money", class: 'login-comm-icon' %>
      						Enjoy exclusive offers
      					</div>
      					<div>
      						<%= button_to 'Sign up',new_spree_user_registration_path, class: 'btn btn-primary' %>
      					</div>
      				</div>
      			</div>
      		</div>
      	</div>
      </div>
    </div>
  </div>
</div>