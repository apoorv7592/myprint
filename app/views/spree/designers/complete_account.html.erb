<h2>Complete your profile information</h2>

<div class="row">
	<div class="col-md-10 col-md-offset-1">
		<%= form_for @dsg, class: 'form-horizontal' do |f| %>
			<div class="row form-group">
				<%= f.label 'Name*', class: 'col-md-3 control-label' %>
				<div class="col-md-6">
					<%= f.text_field :name , class: 'form-control'%>	
				</div>
			</div>
			<div class="row form-group">
				<%= f.label 'City*' , class: 'col-md-3 control-label'%>
				<div class="col-md-6">
					<%= f.text_field :city, class: 'form-control' %>	
				</div>
				
			</div>	
			<div class=" row form-group">
				<%= f.label 'About*', class: 'col-md-3 control-label' %>
				<div class="col-md-6">
					<%= f.text_area :about, class: 'form-control' %>	
				</div>

			</div>	

			<div class=" row form-group">
				<%= f.label 'Phone number', class: 'col-md-3 control-label' %>
				<div class="col-md-6">
					<%= f.text_field :phonenum, class: 'form-control' %>	
				</div>
			</div>	

			<div class=" row form-group">
				<%= f.label 'College/University', class: 'col-md-3 control-label' %>
				<div class="col-md-6">
					<%= f.text_field :college, class: 'form-control' %>	
				</div>
			</div>

			<div class=" row form-group">
				<div class="col-md-4 col-md-offset-3">
					<%= f.submit 'Submit', class: 'btn btn-success form-control' %>
				</div>
			</div>	
		<% end %>		
	</div>
</div>
