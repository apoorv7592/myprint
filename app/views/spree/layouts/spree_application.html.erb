<html lang="<%= I18n.locale %>"><!--<![endif]-->
	<head data-hook="inside_head">
		<%= render partial: 'spree/shared/head' %>
	</head>

	<body class="<%= body_class %> container" id="<%= @body_id || 'default' %>" data-hook="body" >

				<%= render partial: 'spree/shared/google_analytics' %>

<!-- Facebook Conversion Code for Dedicated_Designer_Product_Page -->
<script>(function() {
  var _fbq = window._fbq || (window._fbq = []);
  if (!_fbq.loaded) {
    var fbds = document.createElement('script');
    fbds.async = true;
    fbds.src = '//connect.facebook.net/en_US/fbds.js';
    var s = document.getElementsByTagName('script')[0];
    s.parentNode.insertBefore(fbds, s);
    _fbq.loaded = true;
  }
})();
window._fbq = window._fbq || [];
window._fbq.push(['track', '6024580909768', {'value':'0.00','currency':'INR'}]);
</script>
<noscript><img height="1" width="1" alt="" style="display:none" src="https://www.facebook.com/tr?ev=6024580909768&amp;cd[value]=0.00&amp;cd[currency]=INR&amp;noscript=1" /></noscript>


			<div  class="col-md-12" style="width:1000px;margin-left:70px;">
				<%= render partial: 'spree/shared/topmost_nav' %>
				<%= render partial: 'spree/shared/header' %>
				<%= render partial: 'spree/shared/main_nav_bar' %>
				
				<div class="row" data-hook>
					<%= breadcrumbs(@taxon) %>
					<%= render partial: 'spree/shared/sidebar' if content_for? :sidebar %>

					<div id="content" class="<%= !content_for?(:sidebar) ? "col-sm-12" : "col-sm-8 col-md-9" %>" data-hook>
						
			<!-- Notification Message -->
			<script type="text/javascript">
				<% flash.each do |msg_type, text| %>
					 noty({text: 'noty - a jquery notification library!';
					 	timeout:1500;
					});
				<% end %>
			</script>

						<%= flash_messages %>
						<%= yield %>
					</div>
					<%= yield :templates %>
				</div>
				<%= render partial: 'spree/shared/footer' %>

			</div>
	</body>
</html>


